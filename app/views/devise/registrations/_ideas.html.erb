<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" data-keyboard="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Se connecter</h4>
      </div>
      <div class="modal-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          

          <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-default btn-fb" do %>
              <i class="fa fa-facebook fa-fw"> </i> Se connecter avec Facebook
            <% end %>

          <div>
              <%= f.text_field :first_name, placeholder: "PrÃ©nom" %>
              <%= f.text_field :last_name, placeholder: "Nom" %>
          </div>

          <div>
              <%= f.email_field :email, :autofocus => true, placeholder: "Email"%>
          </div>

      <!--    <div class="controls controls-row">
              <!%= f.date_field :birth_date, class: "span4"%-->
          <!--/div-->

          <div>
              <%= f.password_field :password, placeholder: "Mot de passe" %>
          </div>

      </div>

          <div class="modal-footer" style="text-align:center">
                <%= f.submit "Commencer un quiz", class:"btn btn-default btn-connect" %>
          </div>
        <% end %>
    </div>
  </div>
</div>


